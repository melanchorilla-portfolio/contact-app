extends layouts/layout.pug

block content
    .container.mt-3 
        .row.justify-content-center 
            .col-md-8 
                h2 Contact List
                a.btn.btn-primary.my-2(href="/contact/add") Add Contact 
                
                if msg.length !== 0
                    .alert.alert-success(role='alert')= msg

                table.table
                    thead
                        tr
                            th(scope='col') No
                            th(scope='col') Nama
                            th(scope='col') No. HP
                            th(scope='col') Aksi
                    tbody
                        if contacts.length == 0
                            tr
                                td(colspan='4')
                                    .alert.alert-danger.fw-bold(role='alert') Data contact masih kosong
                        else
                            each contact,key in contacts
                                tr 
                                    td=key+1
                                    td=contact.nama
                                    td=contact.noHP
                                    td 
                                        a.btn.btn-success.badge.rounded-pill(href='/contact/' + contact.nama) Detail
