extends layouts/layout.pug

block content

    .container.mt-3
        .row.justify-content-center
            .col-md-6
                h2.mb-3= title
                if typeof errors != 'undefined'
                    .alert.alert-danger(role='alert')
                        ul 
                            each error in errors
                                li= error.msg
                                
                form(method='post' action='/contact/update')
                    input(type='hidden' name='oldNama' value=(contact.oldNama) ? contact.oldNama : contact.nama)
                    .mb-3
                        label.form-label(for='nama') Nama
                        input#nama.form-control(type='text' name='nama' value=contact.nama required='')
                    .mb-3
                        label.form-label(for='email') E-mail
                        input#email.form-control(type='email' name='email' value=contact.email)
                    .mb-3
                        label.form-label(for='noHP') No. HP
                        input#noHP.form-control(type='number' name='noHP' value=contact.noHP required='')
                    button.btn.btn-primary(type='submit') Edit Data